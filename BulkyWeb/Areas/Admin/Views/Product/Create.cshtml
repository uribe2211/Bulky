@using Bulky.Models
@model ProductVM
<div class="card shadow border-0 mt-4">
    <div class="class-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Product</h2>
            </div>
        </div>
    </div>
    <div class="car-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div class="mb-3 form-floating py-2 col-12">
                    <input asp-for="Product.Title" class="form-control border-0 shadow">
                    <label asp-for="Product.Title" class="m2"></label>
                    <span asp-validation-for="Product.Title" class="text-danger"></span>
                </div>
                <div class="mb-3 form-floating py-2 col-12">
                    <input asp-for="Product.Description" class="form-control border-0 shadow" />
                    <label asp-for="Product.Description" class="m2"></label>
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>

                <div class="mb-3 form-floating py-2 col-12">
                    <input asp-for="Product.ISBN" class="form-control border-0 shadow" />
                    <label asp-for="Product.ISBN" class="m2"></label>
                    <span asp-validation-for="Product.ISBN" class="text-danger"></span>
                </div>

                <div class="mb-3 form-floating py-2 col-12">
                    <input asp-for="Product.Author" class="form-control border-0 shadow" />
                    <label asp-for="Product.Author" class="m2"></label>
                    <span asp-validation-for="Product.Author" class="text-danger"></span>
                </div>

                <div class="mb-3 form-floating py-2 col-12">
                    <input asp-for="Product.Price" class="form-control border-0 shadow" />
                    <label asp-for="Product.Price" class="m2"></label>
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>

                <div class="mb-3 form-floating py-2 col-12">
                    <input asp-for="Product.ListPrice" class="form-control border-0 shadow" />
                    <label asp-for="Product.ListPrice" class="m2"></label>
                    <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
                </div>

                <div class="mb-3 form-floating py-2 col-12">
                    <input asp-for="Product.Price50" class="form-control border-0 shadow" />
                    <label asp-for="Product.Price50" class="m2"></label>
                    <span asp-validation-for="Product.Price50" class="text-danger"></span>
                </div>

                <div class="mb-3 form-floating py-2 col-12">
                    <input asp-for="Product.Price100" class="form-control border-0 shadow" />
                    <label asp-for="Product.Price100" class="m2"></label>
                    <span asp-validation-for="Product.Price100" class="text-danger"></span>
                </div>

                <div class="mb-3 form-floating py-2 col-12">
                    <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
                        <option disabled selected>--Select Category--</option>
                    </select> 
                    <label asp-for="Product.CategoryId" class="m2"></label>
                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                </div>

                <div class="mb-3 form-floating py-2 col-12">
                    <input asp-for="Product.imageURL" class="form-control border-0 shadow" />
                    <label asp-for="Product.imageURL" class="m2"></label>
                    <span asp-validation-for="Product.imageURL" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-mb-3">
                        <button type="submit" class="btn btn-primary form-control"><i class="bi bi-floppy-fill"></i> Create</button>
                    </div>
                    <div class="col-6 col-mb-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control"><i class="bi bi-arrow-return-left"></i> Go back</a>
                    </div>
                </div>
            </div>
            <br />
            <div asp-validation-summary="All" class="text-danger"></div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}