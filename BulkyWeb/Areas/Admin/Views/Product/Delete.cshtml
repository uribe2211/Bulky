@using Bulky.Models
@model Product
<div class="card shadow border-0 mt-4">
    <div class="class-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="car-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div class="mb-3 form-floating py-2 col-12">
                    <input asp-for="Title" disabled class="form-control border-0 shadow">
                    <label asp-for="Title" class="m2"></label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3 form-floating py-2 col-12">
                    <input asp-for="Description" class="form-control border-0 shadow" />
                    <label asp-for="Description" disabled class="m2"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3 form-floating py-2 col-12">
                    <input asp-for="ISBN" disabled class="form-control border-0 shadow" />
                    <label asp-for="ISBN" class="m2"></label>
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>

                <div class="mb-3 form-floating py-2 col-12">
                    <input asp-for="Author" disabled class="form-control border-0 shadow" />
                    <label asp-for="Author" class="m2"></label>
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>

                <div class="mb-3 form-floating py-2 col-12">
                    <input asp-for="Price" disabled class="form-control border-0 shadow" />
                    <label asp-for="Price" class="m2"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3 form-floating py-2 col-12">
                    <input asp-for="ListPrice" disabled class="form-control border-0 shadow" />
                    <label asp-for="ListPrice" class="m2"></label>
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>

                <div class="mb-3 form-floating py-2 col-12">
                    <input asp-for="Price50" disabled class="form-control border-0 shadow" />
                    <label asp-for="Price50" class="m2"></label>
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>

                <div class="mb-3 form-floating py-2 col-12">
                    <input asp-for="Price100" disabled class="form-control border-0 shadow" />
                    <label asp-for="Price100" class="m2"></label>
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-mb-3">
                        <button type="submit" class="btn btn-primary form-control"><i class="bi bi-floppy-fill"></i> Delete</button>
                    </div>
                    <div class="col-6 col-mb-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control"><i class="bi bi-arrow-return-left"></i> Go back</a>
                    </div>
                </div>
            </div>
            <br />
            <div asp-validation-summary="All" class="text-danger"></div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}