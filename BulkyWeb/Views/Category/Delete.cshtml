@model Category

<div class="card shadow border-0 mt-4">
    <div class="class-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Category</h2>
            </div>
        </div>
    </div>
    <div class="car-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
                <div class="mb-3 form-floating py-2 col-12">
                    <input asp-for="Name" disabled class="form-control border-0 shadow">
                    <label asp-for="Name" class="m2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3 form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" disabled class="form-control border-0 shadow" />
                    <label asp-for="DisplayOrder" class="m2"></label>
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-mb-3">
                        <button type="submit" class="btn btn-danger form-control"><i class="bi bi-trash-fill"></i> Delete</button>
                    </div>
                    <div class="col-6 col-mb-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-out-secondary form-control"><i class="bi bi-arrow-return-left"></i> Go back</a>
                    </div>
                </div>
            </div>
            <br />
            <div asp-validation-summary="All" class="text-danger"></div>
        </form>
    </div>
</div>

