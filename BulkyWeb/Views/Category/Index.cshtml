@model List<Category>;

<div class="card shadow border-0 mt-4">
    <div class="class-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Category</h2>
            </div>
        </div>
    </div>
    <div class="container pb-4">
        <div class="row pt-4">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-square-fill"></i> Create a new category
                </a>
            </div>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <tr>
            <th>
                Category Id
            </th>
            <th>
                Category name
            </th>
            <th></th>
            <th></th>
        </tr>

        <tbody>
            @foreach (var item in Model.OrderBy(u => u.Name))
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id=@item.Id class="btn btn-primary"><i class="bi bi-pencil-fill"></i> Edit</a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Delete" asp-route-id=@item.Id class="btn btn-danger"><i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>

    </table>
</div>


