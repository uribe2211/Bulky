@using Bulky.Models
@model Category
<div class="card shadow border-0 mt-4">
    <div class="class-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Category</h2>
            </div>
        </div>
    </div>
    <div class="car-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div class="mb-3 form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control border-0 shadow">
                    <label asp-for="Name" class="m2"></label>                    
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3 form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" class="form-control border-0 shadow" />
                    <label asp-for="DisplayOrder" class="m2"></label>
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-mb-3">
                        <button type="submit" class="btn btn-primary form-control"><i class="bi bi-floppy-fill"></i> Create</button>
                    </div>
                    <div class="col-6 col-mb-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary border form-control"><i class="bi bi-arrow-return-left"></i> Go back</a>
                    </div>
                </div>
            </div>
            <br />
            <div asp-validation-summary="All" class="text-danger"></div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}